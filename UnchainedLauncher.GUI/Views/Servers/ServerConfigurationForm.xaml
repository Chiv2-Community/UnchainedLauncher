<UserControl x:Class="UnchainedLauncher.GUI.Views.Servers.ServerConfigurationForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:UnchainedLauncher.GUI.Behaviors"
             xmlns:controls="clr-namespace:UnchainedLauncher.GUI.Views.Controls"
             xmlns:sections="clr-namespace:UnchainedLauncher.GUI.Views.Servers.Sections"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Servers.DesignInstances"
             d:DataContext="{d:DesignInstance designInstances:ServerConfigurationDesignVM}"
             mc:Ignorable="d"
             d:DesignWidth="800">
    <StackPanel>
        <sections:ServerDetailsSectionView />

        <controls:CollapsibleCard
            Header="Server Configuration"
            IsExpanded="True">
            <StackPanel>
                <TabControl Margin="0,8,0,0"
                            Style="{StaticResource UnderlineTabControlStyle}"
                            ItemContainerStyle="{StaticResource UnderlineTabItemStyle}">
                    <TabItem Header="Base Configuration">
                        <sections:BaseConfigurationSectionView DataContext="{Binding BaseConfigurationSection}" />
                    </TabItem>
                    
                    <TabItem Header="Free For All">
                        <sections:FfaConfigurationSectionView DataContext="{Binding  FFA}" />
                    </TabItem>
                    
                    <TabItem Header="Team Autobalance">
                        <sections:TeamAutobalanceSectionView DataContext="{Binding GameMode}" />
                    </TabItem>
                    
                    <TabItem Header="Team Deathmatch">
                        <sections:TdmConfigurationSectionView DataContext="{Binding  TDM}" />
                    </TabItem>

                    <TabItem Header="Last Team Standing">
                        <sections:LastTeamStandingSectionView DataContext="{Binding LTS}" />
                    </TabItem>

                    <TabItem Header="Arena">
                        <sections:ArenaSectionView DataContext="{Binding Arena}" />
                    </TabItem>

                    <TabItem Header="Advanced">
                        <sections:AdvancedConfigurationSectionView DataContext="{Binding AdvancedConfigurationSection}" />
                    </TabItem>
                </TabControl>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 7 0">
                    <Button Content="Open INI Folder" Command="{Binding OpenIniFolderCommand}" Margin="0,0,8,0" />
                    <Button Content="Reload INI" Command="{Binding ReloadIniCommand}" />
                </StackPanel>
            </StackPanel>
        </controls:CollapsibleCard>

        <sections:ServerModActorsSectionView />
    </StackPanel>
</UserControl>