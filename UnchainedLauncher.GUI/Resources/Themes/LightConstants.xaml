<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light theme color palette -->
    <Color x:Key="Color.Primary">#FF5f89e3</Color>
    <Color x:Key="Color.PrimaryHover">#FF3d72e3</Color>
    <Color x:Key="Color.Secondary">#FFE5E7EB</Color>
    <Color x:Key="Color.Success">#FF37a660</Color>
    <Color x:Key="Color.Danger">#FFdb5a5a</Color>
    <Color x:Key="Color.Warning">#FFf5c36e</Color>
    <Color x:Key="Color.Info">#FF44b7eb</Color>
    <Color x:Key="Color.Light">#FFFFFFFF</Color>
    <Color x:Key="Color.Dark">#FF0F172A</Color>

    <Color x:Key="Color.TextPrimary">#FF111827</Color>
    <Color x:Key="Color.TextSecondary">#FF475569</Color>
    <Color x:Key="Color.Border">#FFD1D5DB</Color>
    <Color x:Key="Color.Background">#FFF8FAFC</Color>
    <Color x:Key="Color.Muted">#FF64748B</Color>

    <Color x:Key="Color.InputBorder">#FFCBD5E1</Color>
    <Color x:Key="Color.InputBackground">#FFFFFFFF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="Brush.Primary" Color="{DynamicResource Color.Primary}" />
    <SolidColorBrush x:Key="Brush.PrimaryHover" Color="{DynamicResource Color.PrimaryHover}" />
    <SolidColorBrush x:Key="Brush.Secondary" Color="{DynamicResource Color.Secondary}" />
    <SolidColorBrush x:Key="Brush.Success" Color="{DynamicResource Color.Success}" />
    <SolidColorBrush x:Key="Brush.Danger" Color="{DynamicResource Color.Danger}" />
    <SolidColorBrush x:Key="Brush.Warning" Color="{DynamicResource Color.Warning}" />
    <SolidColorBrush x:Key="Brush.Info" Color="{DynamicResource Color.Info}" />
    <SolidColorBrush x:Key="Brush.Light" Color="{DynamicResource Color.Light}" />
    <SolidColorBrush x:Key="Brush.Dark" Color="{DynamicResource Color.Dark}" />

    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{DynamicResource Color.TextPrimary}" />
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{DynamicResource Color.TextSecondary}" />
    <SolidColorBrush x:Key="Brush.Border" Color="{DynamicResource Color.Border}" />
    <SolidColorBrush x:Key="Brush.Background" Color="{DynamicResource Color.Background}" />
    <SolidColorBrush x:Key="Brush.Muted" Color="{DynamicResource Color.Muted}" />

    <SolidColorBrush x:Key="Brush.InputBorder" Color="{DynamicResource Color.InputBorder}" />
    <SolidColorBrush x:Key="Brush.InputBackground" Color="{DynamicResource Color.InputBackground}" />
    <SolidColorBrush x:Key="Brush.White" Color="#FFFFFFFF" />

    <SolidColorBrush x:Key="Brush.LightTransparent" Color="{DynamicResource Color.Light}" Opacity="0.5" />
    <SolidColorBrush x:Key="Brush.PrimaryTransparent" Color="{DynamicResource Color.Primary}" Opacity="0.2" />

</ResourceDictionary>
