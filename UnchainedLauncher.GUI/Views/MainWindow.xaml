<local:UnchainedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views"
    xmlns:mods="clr-namespace:UnchainedLauncher.GUI.Views.Mods"
    xmlns:servers="clr-namespace:UnchainedLauncher.GUI.Views.Servers"
    xmlns:instances="clr-namespace:UnchainedLauncher.GUI.Views.DesignInstances"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance instances:MainWindowDesignVM}"
    x:Class="UnchainedLauncher.GUI.Views.MainWindow"
    Style="{DynamicResource UnchainedChrome}"
    Visibility="{Binding HomeVM.MainWindowVisibility}"
    ShowWindowTitle="False"
    Title="Unchained Launcher" Height="500" Width="1000">
    <Window.Resources>
        <Style TargetType="TabItem" x:Key="UnderlineTabItemStyle">
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <!-- Make the entire header area hit-testable so clicking whitespace switches tabs -->
                        <Grid Background="Transparent">
                            <Border x:Name="Spacer"
                                    Margin="20 0 20 10"
                                    BorderBrush="Transparent"
                                    Background="Transparent">
                                <!-- Tab content -->
                                <ContentPresenter x:Name="ContentSite"
                                                  ContentSource="Header"
                                                  RecognizesAccessKey="True"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Border>
                            <!-- Underline for selected tab -->
                            <Border x:Name="Underline"
                                    Height="2"
                                    VerticalAlignment="Bottom"
                                    Background="{DynamicResource Brush.Primary}"
                                    Visibility="Collapsed" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource Brush.Primary}" />
                                <Setter TargetName="Underline" Property="Visibility" Value="Visible" />
                                <Setter Property="Panel.ZIndex" Value="1" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource Brush.PrimaryHover}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl template with logo on the left and right-aligned tabs -->
        <Style TargetType="TabControl" x:Key="RightAlignedTabControlStyle">
            <Setter Property="Background" Value="{DynamicResource Brush.Background}" />
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local"
                              Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!-- Header row: logo on the left, app title next to it, tabs on the right -->
                            <Grid Grid.Row="0" Margin="8,8,8,0" Background="{TemplateBinding Background}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Height="56"
                                       Stretch="Uniform"
                                       VerticalAlignment="Top"
                                       Margin="0,-32,8,6"
                                       Source="pack://application:,,,/UnchainedLauncher;component/assets/chiv2-unchained-logo.png" />
                                <!-- Ensure the app title is vertically centered relative to the logo's visual height (56) that spans title bar + tab header -->
                                <Border Grid.Column="1"
                                        Height="56"
                                        VerticalAlignment="Top"
                                        Margin="0,-32,12,6">
                                    <TextBlock Text="Unchained"
                                               Style="{DynamicResource Heading.H1}"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold" />
                                </Border>
                                <TabPanel Grid.Column="2" x:Name="HeaderPanel"
                                          IsItemsHost="True"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Bottom"
                                          Margin="8,0,0,0"
                                          Width="NaN"
                                          Background="{TemplateBinding Background}" />
                            </Grid>
                            <!-- Thin separator line between headers and content (full width) -->
                            <Rectangle Grid.Row="0"
                                       VerticalAlignment="Bottom"
                                       Height="1"
                                       Fill="{DynamicResource Brush.Border}" />

                            <!-- Content host wrapped in a Border to carry background -->
                            <Border Grid.Row="1"
                                    Background="{TemplateBinding Background}"
                                    Margin="16">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"
                                                  SnapsToDevicePixels="True" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <TabControl x:Name="Tabs"
                Style="{StaticResource RightAlignedTabControlStyle}"
                ItemContainerStyle="{StaticResource UnderlineTabItemStyle}">
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🏠" Margin="0,0,6,0" />
                    <TextBlock Text="Home" />
                </StackPanel>
            </TabItem.Header>
            <local:Home DataContext="{Binding HomeVM}" />
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🧩" Margin="0,0,6,0" />
                    <TextBlock Text="Mod Manager" />
                </StackPanel>
            </TabItem.Header>
            <mods:ModList DataContext="{Binding ModListViewModel}" />
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🖥️" Margin="0,0,6,0" />
                    <TextBlock Text="Servers" />
                </StackPanel>
            </TabItem.Header>
            <servers:ServersTab DataContext="{Binding ServersTab}" />
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚙️" Margin="0,0,6,0" />
                    <TextBlock Text="Settings" />
                </StackPanel>
            </TabItem.Header>
            <local:Settings DataContext="{Binding SettingsViewModel}" />
        </TabItem>
    </TabControl>
</local:UnchainedWindow>