<UserControl x:Class="UnchainedLauncher.GUI.Views.Servers.Sections.ServerDetailsSectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Servers.DesignInstances"
             xmlns:servers="clr-namespace:UnchainedLauncher.GUI.Views.Servers"
             xmlns:controls="clr-namespace:UnchainedLauncher.GUI.Views.Controls"
             Background="{DynamicResource Brush.Background}"
             d:DataContext="{d:DesignInstance designInstances:ServerConfigurationDesignVM}"
             mc:Ignorable="d">
    <controls:CollapsibleCard
        Header="Server Details"
        IsExpanded="True">
        <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" Width="NaN" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Server Name :" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="5" />
            <TextBox Text="{Binding Name}" Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" TextWrapping="Wrap" Margin="5,0,5,8"
                     IsManipulationEnabled="True" AcceptsReturn="False" />

            <TextBlock Text="Password:" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="5" />
            <TextBox Text="{Binding Password}" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" TextWrapping="Wrap"
                     Margin="5,0,5,8" IsManipulationEnabled="True" AcceptsReturn="False" />

            <TextBlock Text="Server Description:" Grid.Row="2" Grid.ColumnSpan="5" Grid.Column="0" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="5" />
            <TextBox Text="{Binding Description}" Grid.Row="3" Grid.ColumnSpan="5" Grid.Column="0" MinLines="3" TextWrapping="Wrap"
                     Margin="5,0,5,8"
                     IsManipulationEnabled="True" AcceptsReturn="True" />

            <TextBlock Text="Game port:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="5" />
            <TextBox MaxLength="5" Grid.Row="5" Grid.Column="0" Margin="5 0">
                <Binding Path="GamePort">
                    <Binding.ValidationRules>
                        <servers:PortRangeValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>

            <TextBlock Text="RCON port:" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="5 0" />
            <TextBox MaxLength="5" Grid.Row="5" Grid.Column="1" Margin="5 0">
                <Binding Path="RconPort">
                    <Binding.ValidationRules>
                        <servers:PortRangeValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>

            <TextBlock Text="A2S port:" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="5" />
            <TextBox MaxLength="5" Grid.Row="5" Grid.Column="2" Margin="5 0">
                <Binding Path="A2SPort">
                    <Binding.ValidationRules>
                        <servers:PortRangeValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>

            <TextBlock Text="Ping port:" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="5 0" />
            <TextBox MaxLength="5" Grid.Row="5" Grid.Column="3" Margin="5 0">
                <Binding Path="PingPort">
                    <Binding.ValidationRules>
                        <servers:PortRangeValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>

            <TextBlock Text="Local IP Address:" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="5" />
            <Grid Grid.Row="5" Grid.Column="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Margin="5 0">
                    <Binding Path="LocalIp" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <servers:IPAddressValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Button Grid.Column="1" Command="{Binding AutoFillIpCommand}">Detect</Button>
            </Grid>
        </Grid>
    </controls:CollapsibleCard>
</UserControl>
