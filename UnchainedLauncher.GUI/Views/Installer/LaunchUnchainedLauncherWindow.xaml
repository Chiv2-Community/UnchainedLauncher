<views:UnchainedWindow x:Class="UnchainedLauncher.GUI.Views.Installer.LaunchUnchainedLauncherWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:ivms="clr-namespace:UnchainedLauncher.GUI.ViewModels.Installer"
                       xmlns:views="clr-namespace:UnchainedLauncher.GUI.Views"
                       mc:Ignorable="d"
                       Title="Unchained Launcher"
                       Height="100"
                       Width="550"
                       Style="{DynamicResource UnchainedChrome}">

    <d:DesignProperties.DataContext>
        <ivms:LaunchUnchainedLauncherWindowViewModel />
    </d:DesignProperties.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Text="Select the Chivalry 2 Installation you would like to launch"
            Style="{StaticResource Heading.H2}" />

        <ComboBox
            Grid.Column="0"
            Grid.Row="2"
            ItemsSource="{Binding LaunchTargets}"
            SelectedItem="{Binding SelectedTarget}"
            DisplayMemberPath="DisplayText"
            VerticalContentAlignment="Center" />

        <Button
            Grid.Row="2"
            Grid.Column="2"
            Content="Launch"
            Command="{Binding LaunchCommand}"
            Style="{StaticResource Button.Primary}" />

    </Grid>
</views:UnchainedWindow>