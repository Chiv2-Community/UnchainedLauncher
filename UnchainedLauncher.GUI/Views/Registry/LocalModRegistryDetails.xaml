<UserControl x:Class="UnchainedLauncher.GUI.Views.Registry.LocalModRegistryDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:registry="clr-namespace:UnchainedLauncher.GUI.ViewModels.Registry"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Registry.DesignInstances"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance designInstances:LocalModRegistryDetailsDesignVM}"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type registry:RegistryModVM}">
            <Border Style="{StaticResource Card}" Margin="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Mod Header -->
                    <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="14" Margin="0,0,0,10">
                        <Run Text="{Binding Mod.LatestManifest.Organization, Mode=OneWay}" />
                        <Run Text="/" Foreground="{StaticResource Brush.TextSecondary}" />
                        <Run Text="{Binding Mod.LatestManifest.Name, Mode=OneWay}" />
                    </TextBlock>

                    <!-- Releases List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding Releases}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,0,0,1"
                                            Padding="4" Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Release.Version, Mode=OneWay}"
                                                       VerticalAlignment="Center"
                                                       Margin="4,0" />

                                            <Button Grid.Column="1"
                                                    Command="{Binding EditCommand}"
                                                    Content="Edit"
                                                    Padding="8,4"
                                                    Margin="4,0"
                                                    Style="{StaticResource Button.Secondary}" />

                                            <Button Grid.Column="2"
                                                    Command="{Binding DeleteCommand}"
                                                    Content="Delete"
                                                    Padding="8,4"
                                                    Margin="4,0,0,0"
                                                    Style="{StaticResource Button.Danger}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Add Release Button -->
                    <Button Grid.Row="2"
                            Command="{Binding AddReleaseCommand}"
                            Content="+ Add Release"
                            Margin="0,10,0,0"
                            Style="{StaticResource Button.Success}"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Stretch" />
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Mods Grid -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Mods, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}"
                                          Width="300"
                                          Height="Auto" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer with Add Button -->
        <Border Grid.Row="1"
                BorderBrush="{StaticResource Brush.Border}"
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0"
                Margin="0,15,0,0">
            <Button Command="{Binding AddReleaseCommand}"
                    Content="+ Add New Mod"
                    Padding="15,8"
                    Style="{StaticResource Button.Primary}"
                    FontWeight="SemiBold"
                    FontSize="14"
                    HorizontalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>