<UserControl x:Class="UnchainedLauncher.GUI.Views.Servers.ServerConfigurationForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views.Servers"
             xmlns:mods="clr-namespace:UnchainedLauncher.GUI.Views.Mods"
             xmlns:conv="clr-namespace:UnchainedLauncher.GUI.Converters"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Servers.DesignInstances"
             d:DataContext="{d:DesignInstance designInstances:ServerConfigurationDesignVM}"
             mc:Ignorable="d"
             d:DesignHeight="1500" d:DesignWidth="800">
    <StackPanel>
        <Border Style="{DynamicResource Card}">
            <StackPanel>
                <TextBlock Text="Server Details" Style="{DynamicResource Heading.H3}" />
                 <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" Width="NaN" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Server Name :" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                   VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding Name}" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" TextWrapping="Wrap" Margin="5,0,5,0"
                 IsManipulationEnabled="True" AcceptsReturn="False" />

        <TextBlock Text="Password:" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                   VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding Password}" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" TextWrapping="Wrap"
                 Margin="5,0,5,0" IsManipulationEnabled="True" AcceptsReturn="False" />

        <TextBlock Text="Select Starting Map:" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left"
                   VerticalAlignment="Center" Margin="5" />
        <ComboBox ItemsSource="{Binding AvailableMaps}" SelectedItem="{Binding SelectedMap, Mode=TwoWay}"
                  Grid.Row="1" Grid.Column="4"
                  Margin="5,0,5,0" IsManipulationEnabled="True" />

        <TextBlock Text="Server Description:" Grid.Row="2" Grid.ColumnSpan="5" Grid.Column="0" HorizontalAlignment="Left"
                   VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding Description}" Grid.Row="3" Grid.ColumnSpan="5" Grid.Column="0" MinLines="3" TextWrapping="Wrap"
                 IsManipulationEnabled="True" AcceptsReturn="True" />

        <CheckBox IsChecked="{Binding ShowInServerBrowser}" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"
                  Content="Show in Server Browser" Margin="5" Height="NaN" VerticalAlignment="Stretch" Width="NaN"
                  HorizontalAlignment="Right" FlowDirection="RightToLeft" />

        <TextBlock Text="Game port:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="5" />
        <TextBox MaxLength="5" Grid.Row="5" Grid.Column="0" Margin="5">
            <Binding Path="GamePort">
                <Binding.ValidationRules>
                    <local:PortRangeValidationRule />
                </Binding.ValidationRules>
            </Binding>
        </TextBox>

        <TextBlock Text="RCON port:" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="5" />
        <TextBox MaxLength="5" Grid.Row="5" Grid.Column="1" Margin="5">
            <Binding Path="RconPort">
                <Binding.ValidationRules>
                    <local:PortRangeValidationRule />
                </Binding.ValidationRules>
            </Binding>
        </TextBox>

        <TextBlock Text="A2S port:" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="5" />
        <TextBox MaxLength="5" Grid.Row="5" Grid.Column="2" Margin="5">
            <Binding Path="A2SPort">
                <Binding.ValidationRules>
                    <local:PortRangeValidationRule />
                </Binding.ValidationRules>
            </Binding>
        </TextBox>

        <TextBlock Text="Ping port:" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="5" />
        <TextBox MaxLength="5" Grid.Row="5" Grid.Column="3" Margin="5">
            <Binding Path="PingPort">
                <Binding.ValidationRules>
                    <local:PortRangeValidationRule />
                </Binding.ValidationRules>
            </Binding>
        </TextBox>

        <TextBlock Text="Local IP Address:" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Left"
                   VerticalAlignment="Center" Margin="5" />
        <Grid Grid.Row="5" Grid.Column="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Margin="5">
                <Binding Path="LocalIp" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <local:IPAddressValidationRule ValidatesOnTargetUpdated="True" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <Button Grid.Column="1" Command="{Binding AutoFillIpCommand}">Detect</Button>
        </Grid>

    </Grid>
            </StackPanel>
        </Border>

        <Border Style="{DynamicResource Card}">
            <StackPanel>
                <TextBlock Text="Server Configuration" Style="{DynamicResource Heading.H3}" />

                <TabControl Margin="0,8,0,0"
                            Style="{StaticResource UnderlineTabControlStyle}"
                            ItemContainerStyle="{StaticResource UnderlineTabItemStyle}">
                    <TabItem Header="Base Configuration">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <Grid Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <CheckBox IsChecked="{Binding BotBackfillEnabled}"
                                          Content="Bot Backfill Enabled"
                                          Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,12,8" />

                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Margin="0,0,12,8">
                                    <TextBlock Text="FPS Limit" VerticalAlignment="Center" Margin="0,0,6,0" />
                                    <TextBox Text="{Binding FpsLimit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" Margin="0,0,0,8">
                                    <TextBlock Text="Max Players" VerticalAlignment="Center" Margin="0,0,6,0" />
                                    <TextBox Text="{Binding MaxPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                                </StackPanel>

                                <Grid Grid.Row="1" Grid.ColumnSpan="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Map Rotation" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,4" />

                                    <ComboBox Grid.Row="1" Grid.Column="0"
                                              ItemsSource="{Binding AvailableMaps}"
                                              SelectedItem="{Binding MapToAdd, Mode=TwoWay}"
                                              MinWidth="220" />
                                    <Button Grid.Row="1" Grid.Column="1" Content="Add" Command="{Binding AddMapCommand}" Margin="8,0,0,0" />

                                    <ListBox Grid.Row="2"
                                             Grid.ColumnSpan="2"
                                             ItemsSource="{Binding MapList}"
                                             BorderBrush="{StaticResource Brush.Border}"
                                             BorderThickness="1"
                                             MinHeight="140"
                                             Margin="0,6,0,0"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                                <Setter Property="Padding" Value="0" />
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="0,2,8,2" Padding="8,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="0,0,6,0" />

                                                        <Button Grid.Column="1"
                                                                Width="28"
                                                                Height="28"
                                                                Padding="0"
                                                                Margin="6,0,0,0"
                                                                ToolTip="Remove"
                                                                Command="{Binding DataContext.RemoveMapCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}">
                                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="14" VerticalAlignment="Center" />
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Team Autobalance">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Margin="8">
                                <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="Team Autobalance" FontWeight="SemiBold" Margin="0,0,0,8" />

                                        <UniformGrid Columns="2" Margin="0,0,0,10">
                                            <CheckBox IsChecked="{Binding AutoBalanceEnabled}" Content="Auto Balance Enabled" Margin="0,0,12,0" />
                                            <CheckBox IsChecked="{Binding TeamBalanceEnabled}" Content="Team Balance Enabled" />
                                        </UniformGrid>

                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Auto Balance Grace Period (s)" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding StartOfMatchGracePeriodForAutoBalance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Width="80" />

                                            <TextBlock Text="Team Switch Grace Period (s)" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding StartOfMatchGracePeriodForTeamSwitching, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="4" Width="80" />
                                        </Grid>

                                        <CheckBox IsChecked="{Binding UseStrictTeamBalanceEnforcement}" Content="Strict Team Balance Enforcement" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Last Team Standing">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Margin="8">
                                <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="LTS" FontWeight="SemiBold" Margin="0,0,0,8" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="PreCountdownDelay" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding LtsPreCountdownDelay}" Grid.Column="1" Width="80" />

                                            <TextBlock Text="RoundsToWin" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding LtsRoundsToWin}" Grid.Column="4" Width="80" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Arena">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Margin="8">
                                <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="Arena" FontWeight="SemiBold" Margin="0,0,0,8" />
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="RoundsToWin" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding ArenaRoundsToWin}" Grid.Row="0" Grid.Column="1" Width="80" />

                                            <TextBlock Text="RoundTimeLimit" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding ArenaRoundTimeLimit}" Grid.Row="0" Grid.Column="4" Width="80" />

                                            <TextBlock Text="MinTimeBeforeStartingMatch" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding ArenaMinTimeBeforeStartingMatch}" Grid.Row="1" Grid.Column="1" Width="80" />

                                            <TextBlock Text="MaxTimeBeforeStartingMatch" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding ArenaMaxTimeBeforeStartingMatch}" Grid.Row="1" Grid.Column="4" Width="80" />

                                            <TextBlock Text="TeamLives" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding ArenaTeamLives}" Grid.Row="2" Grid.Column="1" Width="80" />
                                        </Grid>

                                        <UniformGrid Columns="2">
                                            <CheckBox IsChecked="{Binding ArenaClearWeaponsPostRound}" Content="Clear Weapons Post Round" Margin="0,0,12,6" />
                                            <CheckBox IsChecked="{Binding ArenaClearHorsesPostRound}" Content="Clear Horses Post Round" Margin="0,0,0,6" />
                                            <CheckBox IsChecked="{Binding ArenaResetTaggedActorsPostRound}" Content="Reset Tagged Actors Post Round" Margin="0,0,12,0" />
                                            <CheckBox IsChecked="{Binding ArenaUsePreCountdownForCustomizationLoading}" Content="Use PreCountdown For Customization Loading" />
                                        </UniformGrid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Advanced">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Margin="8">
                                <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Margin="0,0,0,8" Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="Network (Engine.ini)" FontWeight="SemiBold" Margin="0,0,0,8" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="NetServerMaxTickRate" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding NetServerMaxTickRate}" Grid.Row="0" Grid.Column="1" Width="90" />

                                            <TextBlock Text="LanServerMaxTickRate" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding LanServerMaxTickRate}" Grid.Row="0" Grid.Column="4" Width="90" />

                                            <TextBlock Text="MaxClientRate" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding MaxClientRate}" Grid.Row="1" Grid.Column="1" Width="120" />

                                            <TextBlock Text="MaxInternetClientRate" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding MaxInternetClientRate}" Grid.Row="1" Grid.Column="4" Width="120" />

                                            <TextBlock Text="InitialConnectTimeout" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding InitialConnectTimeout}" Grid.Row="2" Grid.Column="1" Width="90" />

                                            <TextBlock Text="ConnectionTimeout" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding ConnectionTimeout}" Grid.Row="2" Grid.Column="4" Width="90" />

                                            <TextBlock Text="RelevantTimeout" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding RelevantTimeout}" Grid.Row="3" Grid.Column="1" Width="90" />

                                            <TextBlock Text="SpawnPrioritySeconds" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding SpawnPrioritySeconds}" Grid.Row="3" Grid.Column="4" Width="90" />

                                            <TextBlock Text="ServerTravelPause" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding ServerTravelPause}" Grid.Row="4" Grid.Column="1" Width="90" />
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Margin="0,0,0,8" Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="TBLGameMode (Game.ini)" FontWeight="SemiBold" Margin="0,0,0,8" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="IniServerName" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding IniServerName}" Grid.Row="0" Grid.Column="1" MinWidth="220" />

                                            <TextBlock Text="ServerIdentifier" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding ServerIdentifier}" Grid.Row="0" Grid.Column="4" MinWidth="220" />

                                            <TextBlock Text="MinTimeBeforeStartingMatch" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding MinTimeBeforeStartingMatch}" Grid.Row="1" Grid.Column="1" Width="80" />

                                            <TextBlock Text="IdleKickTimerSpectate" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding IdleKickTimerSpectate}" Grid.Row="1" Grid.Column="4" Width="80" />

                                            <TextBlock Text="IdleKickTimerDisconnect" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <TextBox Text="{Binding IdleKickTimerDisconnect}" Grid.Row="2" Grid.Column="1" Width="80" />

                                            <CheckBox IsChecked="{Binding HorseCompatibleServer}" Content="Horse Compatible Server" Grid.Row="3" Grid.ColumnSpan="5" Margin="0,6,0,0" />
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Margin="0,0,0,8" Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="Balance Options" FontWeight="SemiBold" Margin="0,0,0,8" />
                                        <TextBlock Text="AutoBalanceOptions" Margin="0,0,0,4" />
                                        <DataGrid ItemsSource="{Binding AutoBalanceOptions}" AutoGenerateColumns="False" CanUserAddRows="True" MinHeight="100" Margin="0,0,0,8">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Min" Binding="{Binding MinNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                                <DataGridTextColumn Header="Max" Binding="{Binding MaxNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                                <DataGridTextColumn Header="AllowedDiff" Binding="{Binding AllowedNumPlayersDifference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                            </DataGrid.Columns>
                                        </DataGrid>

                                        <TextBlock Text="TeamBalanceOptions" Margin="0,0,0,4" />
                                        <DataGrid ItemsSource="{Binding TeamBalanceOptions}" AutoGenerateColumns="False" CanUserAddRows="True" MinHeight="100">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Min" Binding="{Binding MinNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                                <DataGridTextColumn Header="Max" Binding="{Binding MaxNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                                <DataGridTextColumn Header="AllowedDiff" Binding="{Binding AllowedNumPlayersDifference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource Card}">
            <StackPanel>
                <StackPanel.Resources>
                    <conv:ReleaseEnabledConverter x:Key="ReleaseEnabledConverter" />
                </StackPanel.Resources>
                <TextBlock Text="Server Mod Actors" Style="{DynamicResource Heading.H3}" />
                <ListBox ItemsSource="{Binding AvailableMods}" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <CheckBox
                                    VerticalAlignment="Center"
                                    Checked="CheckBox_OnChecked"
                                    Unchecked="CheckBox_OnUnchecked">
                                    <CheckBox.IsChecked>
                                        <MultiBinding Converter="{StaticResource ReleaseEnabledConverter}" Mode="OneWay">
                                            <Binding />
                                            <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="DataContext.EnabledServerModList" />
                                            <!-- Bind to Count to force re-evaluation when collection changes -->
                                            <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="DataContext.EnabledServerModList.Count" />
                                        </MultiBinding>
                                    </CheckBox.IsChecked>
                                </CheckBox>
                                <TextBlock Margin="8,0,0,0" VerticalAlignment="Center">
                                    <Run Text="{Binding Manifest.Name}" />
                                    <Run Text="  (" />
                                    <Run Text="{Binding Tag}" />
                                    <Run Text=")" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>