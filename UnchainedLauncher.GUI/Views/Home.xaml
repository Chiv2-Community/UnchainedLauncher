<UserControl x:Class="UnchainedLauncher.GUI.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:instances="clr-namespace:UnchainedLauncher.GUI.Views.DesignInstances"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance instances:HomeDesignVM}"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- What's new section -->
        <Border Grid.Row="0" Padding="12" Margin="4" BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1" CornerRadius="6">
            <DockPanel>
                <TextBlock Text="What's new" FontWeight="SemiBold" Margin="0 0 0 8" DockPanel.Dock="Top"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding WhatsNew}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="0 0 0 8" BorderBrush="{DynamicResource Brush.Border}" BorderThickness="0,0,0,1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Date, StringFormat=yyyy-MM-dd}" Opacity="0.7" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Bottom-left normal buttons -->
        <Border Grid.Row="1" Padding="8,12" Background="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Margin="0,0,8,0"
                        Content="Chivalry 2"
                        ToolTip="{Binding ButtonToolTip}"
                        Command="{Binding LaunchVanillaCommand}"
                        IsEnabled="{Binding Settings.CanClick}"/>

                <Button Margin="0,0,8,0"
                        Content="Chivalry 2 with Mods"
                        ToolTip="{Binding ButtonToolTip}"
                        Command="{Binding LaunchModdedVanillaCommand}"
                        IsEnabled="{Binding Settings.CanClick}"/>

                <Button Content="Chivalry 2 Unchained"
                        ToolTip="{Binding ButtonToolTip}"
                        Command="{Binding LaunchUnchainedCommand}"
                        IsEnabled="{Binding Settings.CanClick}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
