<Window x:Class="UnchainedLauncher.GUI.Views.Registry.RegistryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:instances="clr-namespace:UnchainedLauncher.GUI.Views.DesignInstances"
        xmlns:registry="clr-namespace:UnchainedLauncher.GUI.ViewModels.Registry"
        xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Registry.DesignInstances"
        d:DataContext="{d:DesignInstance designInstances:RegistryWindowDesignVM}"
        mc:Ignorable="d"
        Title="Mod Registries" Height="450" Width="1000">
    <Window.Resources>
        <DataTemplate DataType="{x:Type registry:GithubModRegistryVM}">
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" 
                    Background="White" Margin="8" Padding="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                
                    <!-- Header with Title and Delete Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Button Command="{Binding SelfDeleteCommand}" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Background="#F44336" 
                                Foreground="White"
                                BorderThickness="0"
                                Padding="8,4"
                                ToolTip="Delete Registry"
                                Cursor="Hand"
                                Content="Delete"/>
                    </Grid>
                
                    <!-- Registry Details -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                
                        <Label Grid.Row="0" Grid.Column="0" Content="Organization:" 
                               Margin="0,4" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Org}" 
                                Margin="8,4" Padding="6" VerticalContentAlignment="Center"
                                BorderBrush="#E0E0E0"/>
    
                        <Label Grid.Row="1" Grid.Column="0" Content="Repo Name:" 
                               Margin="0,4" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RepoName}" 
                                Margin="8,4" Padding="6" VerticalContentAlignment="Center"
                                BorderBrush="#E0E0E0"/>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    
        <DataTemplate DataType="{x:Type registry:LocalModRegistryVM}">
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" 
                    Background="White" Margin="8" Padding="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                
                    <!-- Header with Title and Delete Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Button Command="{Binding SelfDeleteCommand}" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Background="#F44336" 
                                Foreground="White"
                                BorderThickness="0"
                                Padding="8,4"
                                ToolTip="Delete Registry"
                                Cursor="Hand"
                                Content="Delete"/>
                    </Grid>
                
                    <!-- Registry Path -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                
                        <Label Grid.Row="0" Grid.Column="0" Content="Registry Path:" 
                               Margin="0,4" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RegistryPath}" 
                                Margin="8,4" Padding="6" VerticalContentAlignment="Center"
                                BorderBrush="#E0E0E0"/>
                    </Grid>
                    
                    <!-- Manage Button -->
                    <Button Grid.Row="2" 
                           Command="{Binding OpenConfigWindowCommand}" 
                           Content="Manage Local Repo" 
                           Margin="0,10,0,0"
                           Padding="10,6"
                           Background="#2196F3"
                           Foreground="White"
                           BorderThickness="0"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           HorizontalAlignment="Stretch"/>
                </Grid>
            </Border>
        </DataTemplate>
    
        <DataTemplate DataType="{x:Type registry:GenericModRegistryVM}">
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" 
                    Background="White" Margin="8" Padding="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <TextBlock Text="{Binding Registry.Name, Mode=OneWay}" 
                              FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                    <Button Command="{Binding SelfDeleteCommand}" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Background="#F44336" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="8,4"
                            ToolTip="Delete Registry"
                            Cursor="Hand"
                            Content="Delete"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="Mod Registry Management"
                  FontSize="18"
                  FontWeight="Bold"
                  Margin="0,0,0,15"/>
    
        <!-- Registries List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Registries}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    
        <!-- Footer with Add Buttons -->
        <Border Grid.Row="2" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0" 
               Padding="0,15,0,0"
               Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding AddNewGithubRegistryCommand}" 
                       Content="+ Add Github Registry" 
                       Margin="0,0,10,0"
                       Padding="15,8"
                       Background="#2196F3"
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Cursor="Hand"/>
                <Button Command="{Binding AddNewLocalRegistryCommand}" 
                       Content="+ Add Local Registry" 
                       Margin="10,0,0,0"
                       Padding="15,8"
                       Background="#2196F3"
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
