<views:UnchainedWindow x:Class="UnchainedLauncher.GUI.Views.Installer.LaunchUnchainedLauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views.Installer"
        xmlns:ivms="clr-namespace:UnchainedLauncher.GUI.ViewModels.Installer"
        xmlns:views="clr-namespace:UnchainedLauncher.GUI.Views"
        mc:Ignorable="d"
        Title="Unchained Launcher"
        Height="180"
        Width="600"
        Style="{DynamicResource UnchainedChrome}">
    
    <d:DesignProperties.DataContext>
        <ivms:LaunchUnchainedLauncherWindowViewModel />
    </d:DesignProperties.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Select the Chivalry 2 Installation you would like to launch"
            HorizontalAlignment="Left"
            Style="{StaticResource Heading.H2}"/>

        <ComboBox
            Grid.Row="1"
            ItemsSource="{Binding LaunchTargets}"
            SelectedItem="{Binding SelectedTarget}"
            DisplayMemberPath="DisplayText"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Margin="0,8,120,0"
            />

        <Button
            Grid.Row="1"
            Content="Launch"
            Command="{Binding LaunchCommand}"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Padding="20,6"
            Style="{StaticResource Button.Primary}"/>

    </Grid>
</views:UnchainedWindow>
