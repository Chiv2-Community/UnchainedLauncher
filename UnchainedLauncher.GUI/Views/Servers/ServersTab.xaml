<UserControl x:Class="UnchainedLauncher.GUI.Views.Servers.ServersTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views.Servers"
             xmlns:instances="clr-namespace:UnchainedLauncher.GUI.Views.DesignInstances"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Servers.DesignInstances"
             d:DataContext="{d:DesignInstance designInstances:ServersTabDesignVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Server selector -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox 
                        Grid.Column="0"
                        ItemsSource="{Binding ServerTemplates}" 
                        SelectedItem="{Binding SelectedTemplate}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock><Run Text="{Binding Path=Form.Name, Mode=OneWay}"/></TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="8 0 0 0">
                <!-- Split buttons: inner edges squared to appear as one control -->
                <Button Width="50"
                        Command="{Binding AddTemplateCommand}"
                        Style="{StaticResource Button.Success.SplitLeft}"
                        Content="+"
                        Margin="8 0 -2 0"/>
                <Button Width="50"
                        Command="{Binding RemoveTemplateCommand}"
                        Style="{StaticResource Button.Danger.SplitRight}"
                        Content="-"
                        Margin="0"/>
                <Button Width="100" Command="{Binding SaveCommand}" Style="{StaticResource Button.Primary}" Content="Save" Margin="8 0 0 0"/>
            </StackPanel>
        </Grid>
        <!-- Template editor & launch buttons (scrollable content, fixed buttons at bottom) -->
        <Grid Grid.Row="1" Visibility="{Binding TemplateEditorVisibility}" Margin="0, 8, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <!-- Scrollable template content -->
            <ScrollViewer Grid.Row="0"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          CanContentScroll="True">
                <local:ServerTemplate DataContext="{Binding SelectedTemplate}"/>
            </ScrollViewer>
            <!-- Launch buttons fixed at bottom -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Command="{Binding LaunchServerCommand}" Style="{StaticResource Button.Primary}">Launch server</Button>
                <Button Grid.Column="2" Command="{Binding LaunchHeadlessCommand}" Style="{StaticResource Button.Secondary}">Launch Headless Server</Button>
            </Grid>
        </Grid>
            
        
        <!-- Running server stuff-->
        <Grid Grid.Row="1" Visibility="{Binding LiveServerVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <local:Server DataContext="{Binding SelectedLive}" Grid.Row="0"/>
            <Button Grid.Row="1"
                Command="{Binding ShutdownServerCommand}" 
                DockPanel.Dock="Bottom"
                Style="{StaticResource Button.Danger}">
                Shut Down
            </Button>
        </Grid>
    </Grid>
</UserControl>
