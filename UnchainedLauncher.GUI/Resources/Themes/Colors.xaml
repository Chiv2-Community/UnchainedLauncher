<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark theme color palette -->
    <Color x:Key="Color.Primary">#FF4C8DFF</Color>
    <Color x:Key="Color.PrimaryHover">#FF3B78E7</Color>
    <Color x:Key="Color.Secondary">#FF5A6472</Color>
    <Color x:Key="Color.Success">#FF2EAD76</Color>
    <Color x:Key="Color.Danger">#FFFF6B81</Color>
    <Color x:Key="Color.Warning">#FFFFC857</Color>
    <Color x:Key="Color.Info">#FF3AC7E8</Color>
    <Color x:Key="Color.Light">#FF2A2A2A</Color>
    <Color x:Key="Color.Dark">#FF0E0E10</Color>

    <Color x:Key="Color.TextPrimary">#FFEDEDEF</Color>
    <Color x:Key="Color.TextSecondary">#FFB0B3B8</Color>
    <Color x:Key="Color.Border">#FF2A2A2A</Color>
    <Color x:Key="Color.Background">#FF121214</Color>
    <Color x:Key="Color.Muted">#FF8A8F98</Color>

    <Color x:Key="Color.InputBorder">#FF3A3A3A</Color>
    <Color x:Key="Color.InputBackground">#FF1E1E22</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="Brush.PrimaryHover" Color="{StaticResource Color.PrimaryHover}"/>
    <SolidColorBrush x:Key="Brush.Secondary" Color="{StaticResource Color.Secondary}"/>
    <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success}"/>
    <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource Color.Danger}"/>
    <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Color.Warning}"/>
    <SolidColorBrush x:Key="Brush.Info" Color="{StaticResource Color.Info}"/>
    <SolidColorBrush x:Key="Brush.Light" Color="{StaticResource Color.Light}" />
    <SolidColorBrush x:Key="Brush.Dark" Color="{StaticResource Color.Dark}"/>

    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource Color.TextSecondary}"/>
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}"/>
    <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background}"/>
    <SolidColorBrush x:Key="Brush.Muted" Color="{StaticResource Color.Muted}"/>

    <SolidColorBrush x:Key="Brush.InputBorder" Color="{StaticResource Color.InputBorder}"/>
    <SolidColorBrush x:Key="Brush.InputBackground" Color="{StaticResource Color.InputBackground}"/>
    <SolidColorBrush x:Key="Brush.White" Color="#FFFFFFFF"/>
    
    <SolidColorBrush x:Key="Brush.LightTransparent" Color="{StaticResource Color.Light}" Opacity="0.5" />
    
</ResourceDictionary>
