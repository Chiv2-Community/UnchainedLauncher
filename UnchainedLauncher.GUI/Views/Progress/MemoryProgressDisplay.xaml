<UserControl x:Class="UnchainedLauncher.GUI.Views.MemoryProgressDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utilities="clr-namespace:UnchainedLauncher.Core.Utilities;assembly=UnchainedLauncher.Core"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Progress.DesignInstances"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance designInstances:MemoryProgressDesignVM}">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type utilities:MemoryProgress}">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Text="{Binding TaskName, Mode=OneWay}"
                    Grid.Row="0"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Brush.TextPrimary}" />
                <ProgressBar
                    Grid.Row="2"
                    Height="24"
                    Minimum="0.00"
                    Maximum="100.00"
                    Value="{Binding ProgressPercentage, Mode=OneWay}"
                    Background="{StaticResource Brush.InputBackground}"
                    BorderBrush="{StaticResource Brush.Border}"
                    Foreground="{StaticResource Brush.Primary}"
                    BorderThickness="1" />
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type utilities:AccumulatedMemoryProgress}">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Text="{Binding TaskName, Mode=OneWay}"
                    Grid.Row="0"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Foreground="{StaticResource Brush.TextPrimary}" />
                <ProgressBar
                    Grid.Row="2"
                    Height="24"
                    Minimum="0.00"
                    Maximum="100.00"
                    Value="{Binding ProgressPercentage, Mode=OneWay}"
                    Background="{StaticResource Brush.InputBackground}"
                    BorderBrush="{StaticResource Brush.Border}"
                    Foreground="{StaticResource Brush.Primary}"
                    BorderThickness="1" />
                <Expander Grid.Row="4"
                          IsExpanded="False"
                          Header="Details"
                          BorderThickness="0">
                    <ListView
                        ItemsSource="{Binding Progresses}"
                        HorizontalContentAlignment="Stretch"
                        BorderThickness="0"
                        Margin="0,8,0,0"
                        Background="Transparent"
                        Foreground="{StaticResource Brush.TextPrimary}" />
                </Expander>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <ContentControl Content="{Binding }" />
    </Grid>
</UserControl>