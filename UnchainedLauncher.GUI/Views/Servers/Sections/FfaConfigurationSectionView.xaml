<UserControl x:Class="UnchainedLauncher.GUI.Views.Servers.Sections.FfaConfigurationSectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Servers.DesignInstances"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance designInstances:ServerConfigurationDesignVM}">
    <StackPanel Margin="8">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Free For All Time Limit" Grid.Row="0" Grid.Column="0" Style="{StaticResource FormLabel}" />
                <TextBox Text="{Binding FFATimeLimit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullableIntConverter}}"
                         Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" />

                <TextBlock Text="Free For All Score Limit" Grid.Row="0" Grid.Column="3" Style="{StaticResource FormLabel}" />
                <TextBox Text="{Binding FFAScoreLimit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullableIntConverter}}"
                         Grid.Row="0" Grid.Column="4" HorizontalAlignment="Stretch" />
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
