<UserControl x:Class="UnchainedLauncher.GUI.Views.Servers.Sections.FfaConfigurationSectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Servers.DesignInstances"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance designInstances:ServerConfigurationDesignVM}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="8">
            <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Padding="8">
                <StackPanel>
                    <TextBlock Text="Free For All" FontWeight="SemiBold" Margin="0,0,0,8" />

                    <CheckBox Content="Enable FFA Time Limit"
                              IsThreeState="True"
                              IsChecked="{Binding EnableFFATimeLimit, Mode=TwoWay}" Margin="0,0,0,6" />

                    <CheckBox Content="Enable FFA Score Limit"
                              IsThreeState="True"
                              IsChecked="{Binding EnableFFAScoreLimit, Mode=TwoWay}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
