<UserControl x:Class="UnchainedLauncher.GUI.Views.Mods.Mod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:UnchainedLauncher.GUI.Views.Controls"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Mods.DesignInstances"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance designInstances:ModDesignVM}"
             d:DesignHeight="300" d:DesignWidth="800"
             Focusable="True">

    <UserControl.Resources>
        <!-- Success tinted background using theme color -->
        <SolidColorBrush x:Key="Brush.SuccessTint"
                         Color="{StaticResource Color.Success}"
                         Opacity="0.05" />

        <!-- Card style that reacts to IsEnabled and focus -->
        <Style x:Key="ModCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource Brush.Success}" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="Background" Value="{StaticResource Brush.SuccessTint}" />
                </DataTrigger>
                <!-- Slightly emphasize on focus -->
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}"
                                 Path="IsKeyboardFocusWithin" />
                    </DataTrigger.Binding>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.25" />
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource ModCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header: Icon, Name, Enable/Disable, Version selector -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="220" />
                </Grid.ColumnDefinitions>
                
                <!-- Mod Icon -->
                <Image Grid.Column="0"
                       Source="{Binding IconUrl}"
                       Width="48"
                       Height="48"
                       Margin="0,0,12,0"
                       VerticalAlignment="Center"
                       Stretch="Uniform" />
                
                <!-- Mod Name Button -->
                <Button Grid.Column="1" 
                        Content="{Binding Mod.LatestReleaseInfo.Name}" 
                        Command="{Binding ViewOnGithubCommand}"
                        FontWeight="SemiBold"
                        FontSize="14"
                        VerticalAlignment="Center" 
                        Background="{DynamicResource Brush.PrimaryTransparent}" 
                        Width="Auto" HorizontalAlignment="Left" 
                        BorderThickness="1" 
                        BorderBrush="{DynamicResource Brush.Border}" />
                
                <!-- Enable/Disable Button -->
                <Button Grid.Column="2"
                        Content="{Binding ButtonText}"
                        Command="{Binding EnableOrDisableCommand}"
                        Margin="0,0,8,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource Button.Secondary}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                    <Setter Property="Background" Value="{StaticResource Brush.Success}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource Brush.Danger}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Version Dropdown -->
                <ComboBox Grid.Column="3"
                          ItemsSource="{Binding Mod.Releases}"
                          SelectedItem="{Binding EnabledRelease, Mode=TwoWay}"
                          DisplayMemberPath="Tag"
                          ToolTip="Select version"
                          VerticalAlignment="Stretch" />
            </Grid>

            <!-- Description: Regular text box -->
            <TextBox Grid.Row="1"
                     Text="{Binding Description, Mode=OneWay}"
                     Margin="0,12,0,0"
                     MinHeight="100"
                     MaxHeight="300"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto" />

            <!-- Details Card -->
            <controls:CollapsibleCard Grid.Row="2"
                                      Header="Contents"
                                      IsExpanded="False"
                                      Margin="0,12,0,0"
                                      Visibility="{Binding HasContents, Converter={StaticResource BoolToVisibilityConverter}}">
                <controls:CollapsibleCard.Body>
                    <StackPanel>
                        <!-- Markers Card -->
                        <controls:CollapsibleCard Header="Markers" IsExpanded="False" Margin="0,0,0,8" Visibility="{Binding HasMarkers, Converter={StaticResource BoolToVisibilityConverter}}">
                            <controls:CollapsibleCard.Body>
                                <ItemsControl ItemsSource="{Binding Manifest.Markers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource Card}" Margin="0,0,0,4" Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Path}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding Hash, StringFormat='Hash: {0}'}" Foreground="{StaticResource Brush.Muted}" FontSize="11" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </controls:CollapsibleCard.Body>
                        </controls:CollapsibleCard>

                        <!-- Blueprints Card -->
                        <controls:CollapsibleCard Header="Blueprints" IsExpanded="False" Margin="0,0,0,8" Visibility="{Binding HasBlueprints, Converter={StaticResource BoolToVisibilityConverter}}">
                            <controls:CollapsibleCard.Body>
                                <ItemsControl ItemsSource="{Binding Manifest.Blueprints}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource Card}" Margin="0,0,0,4" Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Path}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding ModName, StringFormat='Mod: {0}'}" Foreground="{StaticResource Brush.Muted}" FontSize="11" />
                                                    <TextBlock Text="{Binding Version, StringFormat='Version: {0}'}" Foreground="{StaticResource Brush.Muted}" FontSize="11" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </controls:CollapsibleCard.Body>
                        </controls:CollapsibleCard>

                        <!-- Maps Card -->
                        <controls:CollapsibleCard Header="Maps" IsExpanded="False" Margin="0,0,0,8" Visibility="{Binding HasMaps, Converter={StaticResource BoolToVisibilityConverter}}">
                            <controls:CollapsibleCard.Body>
                                <ItemsControl ItemsSource="{Binding Manifest.Maps}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource Card}" Margin="0,0,0,4" Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Path}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding MapName, StringFormat='Name: {0}'}" Foreground="{StaticResource Brush.Muted}" FontSize="11" />
                                                    <TextBlock Text="{Binding GameMode, StringFormat='Game Mode: {0}'}" Foreground="{StaticResource Brush.Muted}" FontSize="11" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </controls:CollapsibleCard.Body>
                        </controls:CollapsibleCard>

                        <!-- Replacements Card -->
                        <controls:CollapsibleCard Header="Replacements" IsExpanded="False" Margin="0,0,0,8" Visibility="{Binding HasReplacements, Converter={StaticResource BoolToVisibilityConverter}}">
                            <controls:CollapsibleCard.Body>
                                <ItemsControl ItemsSource="{Binding Manifest.Replacements}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource Card}" Margin="0,0,4,4" Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Path}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </controls:CollapsibleCard.Body>
                        </controls:CollapsibleCard>

                        <!-- Arbitrary Assets Card -->
                        <controls:CollapsibleCard Header="Arbitrary Assets" IsExpanded="False" Visibility="{Binding HasArbitrary, Converter={StaticResource BoolToVisibilityConverter}}">
                            <controls:CollapsibleCard.Body>
                                <ItemsControl ItemsSource="{Binding Manifest.Arbitrary}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource Card}" Margin="0,0,4,4" Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Path}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </controls:CollapsibleCard.Body>
                        </controls:CollapsibleCard>
                    </StackPanel>
                </controls:CollapsibleCard.Body>
            </controls:CollapsibleCard>

            <!-- Dependencies Card -->
            <StackPanel Grid.Row="3" Margin="0,12,0,0">
                <controls:CollapsibleCard Header="Dependencies"
                                          IsExpanded="False"
                                          Visibility="{Binding HasDependencies, Converter={StaticResource BoolToVisibilityConverter}}">
                    <controls:CollapsibleCard.Body>
                        <ItemsControl ItemsSource="{Binding Dependencies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource Card}" Margin="0,0,0,4" Padding="8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Info.Name}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                            <TextBlock Text="{Binding Version, StringFormat='Version: {0}'}" Foreground="{StaticResource Brush.Muted}" FontSize="11" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </controls:CollapsibleCard.Body>
                </controls:CollapsibleCard>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>