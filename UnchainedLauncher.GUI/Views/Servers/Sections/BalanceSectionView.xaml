<UserControl x:Class="UnchainedLauncher.GUI.Views.Servers.Sections.BalanceSectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:UnchainedLauncher.GUI.Views.Controls"
             xmlns:behaviors="clr-namespace:UnchainedLauncher.GUI.Behaviors"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Servers.DesignInstances"
             mc:Ignorable="d"
             Background="{DynamicResource Brush.Background}"
             d:DataContext="{d:DesignInstance designInstances:BalanceSectionDesignVM}">

    <StackPanel Margin="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Auto Balance Grace Period (s)" Style="{StaticResource FormLabel}"
                       ToolTip="Grace period (seconds) before auto-balance begins at match start. Example: 30" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding StartOfMatchGracePeriodForAutoBalance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"
                     ToolTip="Grace period (seconds) before auto-balance begins at match start. Example: 30" />

            <TextBlock Grid.Row="0" Grid.Column="3" Text="Team Switch Grace Period (s)" Style="{StaticResource FormLabel}"
                       ToolTip="Grace period (seconds) for team switching at match start. Example: 0" />
            <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding StartOfMatchGracePeriodForTeamSwitching, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"
                     ToolTip="Grace period (seconds) for team switching at match start. Example: 0" />
        </Grid>

        <Grid Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <CheckBox Grid.Column="0" Grid.Row="0" IsChecked="{Binding AutoBalanceEnabled}" Content="Auto Balance Enabled" Margin="0,0,12,6"
                      ToolTip="Enables or disables auto-balance behavior (uses AutoBalanceOptions ranges)." />
            <CheckBox Grid.Column="3" Grid.Row="0" IsChecked="{Binding TeamBalanceEnabled}" Content="Team Balance Enabled" Margin="0,0,12,6"
                      ToolTip="Enables or disables team balance behavior (uses TeamBalanceOptions ranges)." />

            <CheckBox Grid.Column="0" Grid.Row="1" IsChecked="{Binding UseStrictTeamBalanceEnforcement}" Content="Strict Team Balance Enforcement"
                      ToolTip="Unsure what this does. Let us know if you know!" />
        </Grid>
        
        <controls:CollapsibleCard Header="Balance Options" IsExpanded="True" Margin="0,14,0,0">
            <StackPanel>
                <TextBlock Text="Auto Balance Options" Margin="0,0,0,8" FontWeight="SemiBold" />
                
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="With " VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox Grid.Column="1" Text="{Binding AutoBalanceMinToAdd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="0,0,4,0"
                             ToolTip="Minimum number of players for this rule to apply." />
                    <TextBlock Grid.Column="2" Text=" to " VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox Grid.Column="3" Text="{Binding AutoBalanceMaxToAdd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="0,0,4,0"
                             ToolTip="Maximum number of players for this rule to apply." />
                    <TextBlock Grid.Column="4" Text=" players, allow a team to have " VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox Grid.Column="5" Text="{Binding AutoBalanceDiffToAdd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="0,0,4,0"
                             ToolTip="Maximum player difference allowed between teams." />
                    <TextBlock Grid.Column="6" Text=" extra players." VerticalAlignment="Center" Margin="0,0,8,0" />
                    
                    <Button Grid.Column="7"
                            Content="Add"
                            Command="{Binding AddAutoBalanceOptionCommand}"
                            Margin="8,0,0,0" />
                </Grid>

                <ListBox ItemsSource="{Binding GameMode.AutoBalanceOptions}"
                         BorderThickness="0"
                         Margin="0,0,0,8"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         behaviors:MouseWheelScrollForwardingBehavior.IsEnabled="True"
                         ToolTip="Auto-balance settings per player-count range.">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Padding" Value="8" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,2,8,2" Padding="8,4" CornerRadius="4"
                                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="With " VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBox Grid.Column="1" Text="{Binding MinNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="60" Margin="0,0,4,0"
                                             ToolTip="Minimum number of players for this rule to apply." />
                                    <TextBlock Grid.Column="2" Text=" to " VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBox Grid.Column="3" Text="{Binding MaxNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="60" Margin="0,0,4,0"
                                             ToolTip="Maximum number of players for this rule to apply." />
                                    <TextBlock Grid.Column="4" Text=" players, allow one team to have " VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBox Grid.Column="5" Text="{Binding AllowedNumPlayersDifference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="60" Margin="0,0,4,0"
                                             ToolTip="Maximum player difference allowed between teams." />
                                    <TextBlock Grid.Column="6" Text=" extra players." VerticalAlignment="Center" Margin="0,0,8,0" />

                                    <Button Grid.Column="7"
                                            Width="28"
                                            Height="28"
                                            Padding="0"
                                            Content="✕"
                                            Command="{Binding DataContext.RemoveAutoBalanceOptionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="Team Balance Options" Margin="0,8,0,8" FontWeight="SemiBold" />
                
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="With " VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox Grid.Column="1" Text="{Binding TeamBalanceMinToAdd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="0,0,4,0"
                             ToolTip="Minimum number of players for this rule to apply." />
                    <TextBlock Grid.Column="2" Text=" to " VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox Grid.Column="3" Text="{Binding TeamBalanceMaxToAdd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="0,0,4,0"
                             ToolTip="Maximum number of players for this rule to apply." />
                    <TextBlock Grid.Column="4" Text=" players, allow a team to have" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox Grid.Column="5" Text="{Binding TeamBalanceDiffToAdd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="0,0,4,0"
                             ToolTip="Maximum player difference allowed between teams." />
                    <TextBlock Grid.Column="6" Text=" extra players." VerticalAlignment="Center" Margin="0,0,8,0" />
                    
                    <Button Grid.Column="7"
                            Content="Add"
                            Command="{Binding AddTeamBalanceOptionCommand}"
                            Margin="8,0,0,0" />
                </Grid>

                <ListBox ItemsSource="{Binding GameMode.TeamBalanceOptions}"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         behaviors:MouseWheelScrollForwardingBehavior.IsEnabled="True"
                         ToolTip="Team balance settings per player-count range.">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Padding" Value="8" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,2,8,2" Padding="8,4" CornerRadius="4"
                                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="With " VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBox Grid.Column="1" Text="{Binding MinNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="60" Margin="0,0,4,0"
                                             ToolTip="Minimum number of players for this rule to apply." />
                                    <TextBlock Grid.Column="2" Text=" to " VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBox Grid.Column="3" Text="{Binding MaxNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="60" Margin="0,0,4,0"
                                             ToolTip="Maximum number of players for this rule to apply." />
                                    <TextBlock Grid.Column="4" Text=" players, allow a team to have up to " VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBox Grid.Column="5" Text="{Binding AllowedNumPlayersDifference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="60" Margin="0,0,4,0"
                                             ToolTip="Maximum player difference allowed between teams." />
                                    <TextBlock Grid.Column="6" Text=" extra players." VerticalAlignment="Center" Margin="0,0,8,0" />

                                    <Button Grid.Column="7"
                                            Width="28"
                                            Height="28"
                                            Padding="0"
                                            Content="✕"
                                            Command="{Binding DataContext.RemoveTeamBalanceOptionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Border BorderThickness="0,0,0,1" BorderBrush="{DynamicResource Brush.Border}" Margin="0,8,0,0" />
                <TextBlock 
                    Text="Example: 'For 0 to 32 players, allow a team to have up to 8 more players than the other team' would allow agatha to have 12 players with masons at 20."
                    Opacity="0.4" 
                    Margin="0,8,0,0" />
                <TextBlock 
                    Text="No idea what the difference is between Auto Balance and Team Balance. If you ever figure it out please let us know." 
                    Opacity="0.4" 
                    Margin="0,20,0,0" />
            </StackPanel>
        </controls:CollapsibleCard>
        
        <controls:CollapsibleCard  Header="Class Limits" IsExpanded="True">
            <StackPanel>
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding CharacterClassValues}"
                              SelectedItem="{Binding ClassLimitClassToAdd, Mode=TwoWay}"
                              MinWidth="220"
                              ToolTip="Choose a class to limit.">
                        <!-- WPF may treat '_' as an access key when rendering raw strings; use TextBlock to preserve underscores -->
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBox Grid.Column="1" Text="{Binding ClassLimitPercentToAdd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="80"
                             ToolTip="Limit percent (0-100)."
                             Margin="8,0,-25,0"
                             TextAlignment="Left"
                             VerticalAlignment="Stretch" />
                    <TextBlock Grid.Column="2" Text="%" Margin="4,0,4,0" VerticalAlignment="Center" />

                    <Button Grid.Column="3"
                            Content="Add"
                            Command="{Binding AddClassLimitCommand}"
                            Margin="8,0,0,0" />
                </Grid>

                <ListBox ItemsSource="{Binding GameMode.ClassLimits}"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         behaviors:MouseWheelScrollForwardingBehavior.IsEnabled="True"
                         ToolTip="Each class can appear once; adding an existing class updates its percent.">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Padding" Value="8" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,2,8,2" Padding="8,4" CornerRadius="4"
                                    BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Class}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="0,0,8,0" />

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                        <TextBox Text="{Binding ClassLimitPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="80"
                                                 Margin="8,0,-25,0"
                                                 ToolTip="Limit percent (0-100)." />
                                        <TextBlock Text="%" Margin="4,0,8,0" VerticalAlignment="Center" />
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Width="28"
                                            Height="28"
                                            Padding="0"
                                            Content="✕"
                                            Command="{Binding DataContext.RemoveClassLimitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Border BorderThickness="0,0,0,1" BorderBrush="{DynamicResource Brush.Border}" Margin="0,8,0,0" />
                <TextBlock Text="Example, `Archer 10%` would allow 1 archer per team of 10 players." Opacity="0.4" Margin="0,8,0,0" />

            </StackPanel>
        </controls:CollapsibleCard>
    </StackPanel>
</UserControl>
