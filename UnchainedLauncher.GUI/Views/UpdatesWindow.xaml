<Window x:Class="UnchainedLauncher.GUI.Views.UpdatesWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views"
        Title="{Binding TitleText}"
        MinHeight="100"
        MinWidth="300"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" 
        xmlns:vms="clr-namespace:UnchainedLauncher.GUI.ViewModels"
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance vms:UpdatesWindowVM}"
        FocusManager.FocusedElement="{Binding ElementName=Yes}">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="{Binding CancelColumnWidth}" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="20*" MinHeight="50" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding MessageText}" Grid.ColumnSpan="3" />

        <ListView ItemsSource="{Binding Updates}" Grid.ColumnSpan="3" Grid.Row="1" BorderThickness="0,1,0,1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                            <TextBlock Text="{Binding Update.Name}" />
                            <TextBlock Text=": " />
                            <TextBlock Text="{Binding Update.Reason}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5,0,5,5" >
                            <TextBlock Text="Version: " />
                            <TextBlock Text="{Binding VersionString}" />
                            <TextBlock Text=" " />
                            <TextBlock>
                                    <Hyperlink NavigateUri="{Binding Update.ReleaseUrl}" Command="{Binding HyperlinkCommand}">
                                        View Release Information
                                    </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>


        <Button Name="Yes" IsDefault="True" Grid.Row="2" Content="{Binding YesButtonText}" Command="{Binding YesCommand}" Margin="10,10,0,10" Style="{StaticResource Button.Primary}" />
        <Button Grid.Column="1" Grid.Row="2" Content="{Binding NoButtonText}"  Command="{Binding NoCommand}" Margin="{Binding NoButtonMargin}" Style="{StaticResource Button.Secondary}" />
        <Button Visibility="{Binding ShowCancelButton}" IsCancel="True" Grid.Column="2" Grid.Row="2" Content="{Binding CancelButtonText}"  Command="{Binding CancelCommand}" Margin="5,10,10,10" Style="{StaticResource Button.Light}" />
    </Grid >
</Window>