<UserControl x:Class="UnchainedLauncher.GUI.Views.Mods.ModList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views.Mods"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Mods.DesignInstances"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance designInstances:ModListDesignVM}"
             Background="{DynamicResource Brush.Background}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top actions: title, search, sort, filters, actions -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Search -->
            <TextBlock Grid.Column="0"
                       Text="Search:"
                       Style="{StaticResource Heading.H3}"
                       VerticalAlignment="Center" />
            <TextBox Grid.Column="2"
                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Search by name or tags"
                     Padding="8,6"
                     VerticalContentAlignment="Center" />

            <!-- Sort -->
            <TextBlock Grid.Column="3"
                       Text="Sort: "
                       VerticalAlignment="Center"
                       Margin="8 0 0 0"
                       Style="{StaticResource Heading.H3}" />
            <ComboBox Grid.Column="4"
                      ItemsSource="{Binding SortModes}"
                      SelectedItem="{Binding SelectedSortMode}"
                      ToolTip="Sort mods"
                      VerticalAlignment="Center">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource ModSortModeToStringConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Actions -->
            <Button x:Name="UpdateModsButton" Grid.Column="6" Content="Update Mods"
                    Command="{Binding UpdateModsCommand}" Margin="0,0,8,0" Style="{StaticResource Button.Primary}" />
            <Button x:Name="RefreshModListButton" Grid.Column="7" Content="Refresh Mod List"
                    Command="{Binding RefreshModListCommand}" Style="{StaticResource Button.Primary}" />
        </Grid>

        <!-- Cards list -->
        <Grid Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding DisplayMods}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:Mod />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>