<views:UnchainedWindow x:Class="UnchainedLauncher.GUI.Views.Registry.RegistryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views.Registry"
        xmlns:views="clr-namespace:UnchainedLauncher.GUI.Views"
        xmlns:instances="clr-namespace:UnchainedLauncher.GUI.Views.DesignInstances"
        xmlns:registry="clr-namespace:UnchainedLauncher.GUI.ViewModels.Registry"
        xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Registry.DesignInstances"
        d:DataContext="{d:DesignInstance designInstances:RegistryWindowDesignVM}"
        mc:Ignorable="d"
        Style="{DynamicResource UnchainedChrome}"
        Title="Mod Registries" Height="450" Width="1000">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <DataTemplate DataType="{x:Type registry:GithubModRegistryVM}">
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                
                    <!-- Header with Title and Delete Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Button Command="{Binding SelfDeleteCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Style="{StaticResource Button.Danger}"
                                Padding="8,4"
                                ToolTip="Delete Registry"
                                Content="Delete"/>
                    </Grid>
                
                    <!-- Registry Details -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                
                        <Label Grid.Row="0" Grid.Column="0" Content="Organization:"
                               Margin="0,4" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Org}"
                                Margin="8,4" Padding="6" VerticalContentAlignment="Center"
                                Style="{StaticResource Input.TextBox}"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Repo Name:"
                               Margin="0,4" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RepoName}"
                                Margin="8,4" Padding="6" VerticalContentAlignment="Center"
                                Style="{StaticResource Input.TextBox}"/>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    
        <DataTemplate DataType="{x:Type registry:LocalModRegistryVM}">
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header with Title and Delete Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Button Command="{Binding SelfDeleteCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Style="{StaticResource Button.Danger}"
                                Padding="8,4"
                                ToolTip="Delete Registry"
                                Content="Delete"/>
                    </Grid>

                    <!-- Registry Path -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Registry Path:"
                               Margin="0,4" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RegistryPath}"
                                Margin="8,4" Padding="6" VerticalContentAlignment="Center"
                                Style="{StaticResource Input.TextBox}"/>
                    </Grid>

                    <!-- Expand/Collapse Toggle Button -->
                    <Button Grid.Row="2"
                            Command="{Binding ToggleExpandedCommand}"
                            Margin="0,10,0,0"
                            Padding="8,6"
                            Style="{StaticResource Button.Light}"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SectionMessage}"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Collapsible Details Section -->
                    <Border Grid.Row="3"
                            Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                            BorderBrush="{StaticResource Brush.Border}"
                            BorderThickness="0,1,0,0"
                            Margin="0,10,0,0"
                            Padding="0,10,0,0">
                        <local:LocalModRegistryDetails DataContext="{Binding InlineVM}"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    
        <DataTemplate DataType="{x:Type registry:GenericModRegistryVM}">
            <Border Style="{StaticResource Card}">
                <Grid>
                    <TextBlock Text="{Binding Registry.Name, Mode=OneWay}" 
                              FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                    <Button Command="{Binding SelfDeleteCommand}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource Button.Danger}"
                            Padding="8,4"
                            ToolTip="Delete Registry"
                            Content="Delete"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- Window content -->
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

            <!-- Registries List -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Registries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentPresenter Content="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer with Add Buttons -->
            <Border Grid.Row="1"
                   BorderBrush="{StaticResource Brush.Border}"
                   BorderThickness="0,1,0,0"
                   Padding="0,15,0,0"
                   Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Command="{Binding AddNewGithubRegistryCommand}"
                           Content="+ Add Github Registry"
                           Margin="0,0,10,0"
                           Padding="15,8"
                           Style="{StaticResource Button.Primary}"
                           FontWeight="SemiBold"
                           FontSize="14"/>
                    <Button Command="{Binding AddNewLocalRegistryCommand}"
                           Content="+ Add Local Registry"
                           Margin="10,0,0,0"
                           Padding="15,8"
                           Style="{StaticResource Button.Primary}"
                           FontWeight="SemiBold"
                           FontSize="14"/>
                </StackPanel>
            </Border>
    </Grid>
</views:UnchainedWindow>
