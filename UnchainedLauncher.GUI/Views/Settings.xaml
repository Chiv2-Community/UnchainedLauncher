<UserControl x:Class="UnchainedLauncher.GUI.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:instances="clr-namespace:UnchainedLauncher.GUI.Views.DesignInstances"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance instances:SettingsDesignVM}"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" Width="NaN" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <TextBlock Text="Installation Type:" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <ComboBox SelectedItem="{Binding InstallationType,Mode=TwoWay}"
                      ItemsSource="{Binding AllInstallationTypes}" Margin="5" Grid.Column="1"
                      VerticalAlignment="Center" Width="NaN" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Additional Mod Actors:" Margin="5" Grid.Column="0" Grid.ColumnSpan="2" />
            <TextBox Text="{Binding AdditionalModActors, Mode=TwoWay}" IsManipulationEnabled="True"
                     AcceptsReturn="False" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="NaN" Margin="5"
                     Width="NaN" />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Server Browser Backend:" Margin="5" Grid.Column="0" Grid.ColumnSpan="2" />
            <TextBox Text="{Binding ServerBrowserBackend, Mode=TwoWay}" IsEnabled="False" AcceptsReturn="False"
                     Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="NaN" Margin="5" Width="NaN" />
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,0,0,0">
            <CheckBox IsChecked="{Binding EnablePluginAutomaticUpdates}" 
              Content="Enable Automatic Plugin Updates and Downloads" 
              VerticalAlignment="Center" />

            <CheckBox IsChecked="{Binding IsUnrealScannerEnabled}" 
              Content="Enable Unreal Mod Scanner Tab" 
              Margin="20,0,0,0" 
              VerticalAlignment="Center" />
        </StackPanel>

        <TextBlock Text="CLI Args:" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="5" />
        <TextBox Text="{Binding CLIArgs}" Grid.Row="4" Grid.ColumnSpan="4" TextWrapping="Wrap"
                 IsManipulationEnabled="True" AcceptsReturn="True" />
        <Button Content="Mod Registries" Grid.Row="2" Grid.Column="3" Margin="5"
                Command="{Binding OpenRegistryWindowCommand}" Style="{DynamicResource Button.Secondary}" />
        <Button Content="Clean Up Installation" Grid.Row="5" Grid.Column="0" Margin="5"
                Command="{Binding CleanUpInstallationCommand}" Style="{DynamicResource Button.Secondary}" />
        <Button Content="Uninstall" Grid.Row="5" Grid.Column="1" Margin="5"
                Command="{Binding UninstallLauncherCommand}" Style="{DynamicResource Button.Danger}" />
        <Button Content="Check for updates" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Right" Margin="5"
                Command="{Binding CheckForUpdateCommand}" Style="{DynamicResource Button.Primary}" />

        <TextBlock Text="{Binding CurrentVersion}" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Center"
                   Height="NaN" Margin="0,0,0,0" VerticalAlignment="Center" Width="NaN" />
    </Grid>
</UserControl>