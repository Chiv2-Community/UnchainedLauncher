<UserControl x:Class="UnchainedLauncher.GUI.Views.Servers.Sections.AdvancedConfigurationSectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.Servers.DesignInstances"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance designInstances:AdvancedConfigurationSectionDesignVM}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="8">
            <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Margin="0,0,0,8" Padding="8">
                <StackPanel>
                    <TextBlock Text="Network (Engine.ini)" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="NetServerMaxTickRate" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.NetServerMaxTickRate}" Grid.Row="0" Grid.Column="1" Width="90" />

                        <TextBlock Text="LanServerMaxTickRate" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.LanServerMaxTickRate}" Grid.Row="0" Grid.Column="4" Width="90" />

                        <TextBlock Text="MaxClientRate" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.MaxClientRate}" Grid.Row="1" Grid.Column="1" Width="120" />

                        <TextBlock Text="MaxInternetClientRate" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.MaxInternetClientRate}" Grid.Row="1" Grid.Column="4" Width="120" />

                        <TextBlock Text="InitialConnectTimeout" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.InitialConnectTimeout}" Grid.Row="2" Grid.Column="1" Width="90" />

                        <TextBlock Text="ConnectionTimeout" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.ConnectionTimeout}" Grid.Row="2" Grid.Column="4" Width="90" />

                        <TextBlock Text="RelevantTimeout" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.RelevantTimeout}" Grid.Row="3" Grid.Column="1" Width="90" />

                        <TextBlock Text="SpawnPrioritySeconds" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.SpawnPrioritySeconds}" Grid.Row="3" Grid.Column="4" Width="90" />

                        <TextBlock Text="ServerTravelPause" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding IpNetDriver.ServerTravelPause}" Grid.Row="4" Grid.Column="1" Width="90" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Margin="0,0,0,8" Padding="8">
                <StackPanel>
                    <TextBlock Text="TBLGameMode (Game.ini)" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="ServerIdentifier" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding GameMode.ServerIdentifier}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" MinWidth="220" />

                        <TextBlock Text="MinTimeBeforeStartingMatch" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding GameMode.MinTimeBeforeStartingMatch}" Grid.Row="1" Grid.Column="1" Width="80" />

                        <TextBlock Text="IdleKickTimerSpectate" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding GameMode.IdleKickTimerSpectate}" Grid.Row="1" Grid.Column="4" Width="80" />

                        <TextBlock Text="IdleKickTimerDisconnect" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox Text="{Binding GameMode.IdleKickTimerDisconnect}" Grid.Row="2" Grid.Column="1" Width="80" />

                        <CheckBox IsChecked="{Binding GameMode.HorseCompatibleServer}" Content="Horse Compatible Server" Grid.Row="3" Grid.ColumnSpan="5" Margin="0,6,0,0" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="6" Margin="0,0,0,8" Padding="8">
                <StackPanel>
                    <TextBlock Text="Balance Options" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <TextBlock Text="AutoBalanceOptions" Margin="0,0,0,4" />
                    <DataGrid ItemsSource="{Binding GameMode.AutoBalanceOptions}" AutoGenerateColumns="False" CanUserAddRows="True" MinHeight="100" Margin="0,0,0,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Min" Binding="{Binding MinNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                            <DataGridTextColumn Header="Max" Binding="{Binding MaxNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                            <DataGridTextColumn Header="AllowedDiff" Binding="{Binding AllowedNumPlayersDifference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Text="TeamBalanceOptions" Margin="0,0,0,4" />
                    <DataGrid ItemsSource="{Binding GameMode.TeamBalanceOptions}" AutoGenerateColumns="False" CanUserAddRows="True" MinHeight="100">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Min" Binding="{Binding MinNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                            <DataGridTextColumn Header="Max" Binding="{Binding MaxNumPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                            <DataGridTextColumn Header="AllowedDiff" Binding="{Binding AllowedNumPlayersDifference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
