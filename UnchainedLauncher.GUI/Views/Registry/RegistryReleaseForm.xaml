<UserControl x:Class="UnchainedLauncher.GUI.Views.Registry.RegistryReleaseForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views.Registry"
             xmlns:designInstances="clr-namespace:UnchainedLauncher.GUI.Views.DesignInstances"
             d:DataContext="{x:Static designInstances:LocalModRegistryConfigWindowViewModelInstances.DEFAULT_RELEASE}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock>
                Organization:
                <TextBox MinWidth="100" Text="{Binding Organization}"/>
            </TextBlock>
            <TextBlock>
                Name:
                <TextBox MinWidth="100" Text="{Binding Name}"/>
            </TextBlock>
            <TextBlock>
                Description:
                <TextBox MinWidth="100" MinLines="2" Text="{Binding Description}"/>
            </TextBlock>
            <TextBlock>
                Tag:
                <TextBox MinWidth="50">
                    <Binding Path="Tag">
                        <Binding.ValidationRules>
                            <local:VersionStringRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </TextBlock>
            <ComboBox 
                MaxWidth="100"
                HorizontalContentAlignment="Left"
                ItemsSource="{Binding ModTypeChoices, Mode=OneWay}"
                SelectedItem="{Binding SelectedModType}"
                />
            <TextBlock>
                ReleaseHash:
                <Run Text="{Binding ReleaseHash}"/>
            </TextBlock>
            <StackPanel Width="100" Height="100" Background="Gray" Drop="ImagePanel_Drop" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown" AllowDrop="True">
                <TextBlock TextWrapping="Wrap">drag and drop a pak file here, or click</TextBlock>
                <TextBlock 
                    Foreground="DarkRed" 
                    Text="{Binding LastDragDropComplaint, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    TextWrapping="Wrap"/>
            </StackPanel>
            <Button Command="{Binding SubmitCommand}">Submit</Button>
            <TextBlock Foreground="DarkRed" Text="{Binding LastSubmitComplaint}"/>
        </StackPanel>
    </Grid>
</UserControl>
