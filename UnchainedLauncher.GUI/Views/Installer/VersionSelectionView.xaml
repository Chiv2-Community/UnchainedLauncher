<UserControl x:Class="UnchainedLauncher.GUI.Views.Installer.VersionSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ivms="clr-namespace:UnchainedLauncher.GUI.ViewModels.Installer"
             xmlns:controls="clr-namespace:UnchainedLauncher.GUI.Views.Controls"
             xmlns:local="clr-namespace:UnchainedLauncher.GUI.Views.Installer"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="800">
    <d:DesignProperties.DataContext>
        <ivms:VersionSelectionPageViewModel />
    </d:DesignProperties.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox
                  x:Name="VersionComboBox"
                  Margin="0,5,5,5"
                  Grid.Column="0"
                  VerticalAlignment="Center"
                  ItemsSource="{Binding VisibleVersions}"
                  SelectedItem="{Binding SelectedVersion}"
                  DisplayMemberPath="DisplayText"
                  DropDownOpened="VersionComboBox_DropDownOpened"
                >
                <ComboBox.Resources>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLatestStable}" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Resources>
            </ComboBox>

            <CheckBox
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    IsChecked="{Binding ShowDevReleases}"
                    Margin="10,0,0,0"
                    Content="Show Dev Releases"/>
        </Grid>

        <TextBlock Grid.Row="1" 
                   Text="{Binding SelectedVersion.DisplayText}"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>

        <Border Grid.Row="2" Margin="0,0,0,10" BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1" CornerRadius="6">
            <controls:HtmlWebView Html="{Binding SelectedVersionDescriptionHtml}"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"/>
        </Border>

        <Button Grid.Row="3" 
                Content="View on GitHub"
                Command="{Binding ViewOnGithubCommand}"
                IsEnabled="{Binding IsSelected}"
                HorizontalAlignment="Left"
                Padding="20,3"
                Margin="0,0,10,0"
                Style="{StaticResource Button.Secondary}"/>
    </Grid>
</UserControl>